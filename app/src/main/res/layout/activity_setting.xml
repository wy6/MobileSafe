<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:epan="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <!--浅蓝 #3f51b5   深蓝 #303f9f   草绿 #54c590  墨黑 #484848  浅白 #a9a9a9  -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#3f51b5"
        android:gravity="center"
        android:text="设置中心"
        android:textColor="#ffffff"
        android:textSize="22sp" />

    <com.epan.mobilesafe.ui.SettingView
        android:id="@+id/sv_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        epan:des_off="自动更新关闭"
        epan:des_on="自动更新开启"
        epan:title="自动更新" />

    <com.epan.mobilesafe.ui.SettingView
        android:id="@+id/sv_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        epan:des_off="号码归属地显示关闭"
        epan:des_on="号码归属地显示开启"
        epan:title="号码归属地显示" />

    <com.epan.mobilesafe.ui.SettingClickView
        android:id="@+id/scv_location_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.epan.mobilesafe.ui.SettingClickView
        android:id="@+id/scv_change_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>
